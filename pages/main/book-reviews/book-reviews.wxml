<import src="breviews-item/breviews-item-tpl.wxml" />
<view>
  <swiper catchtap="onSwiperTap" vertical="{{false}}"  indicator-dots="true" autoplay="true" interval="5000" circular="true">
    <swiper-item>
      <image src="/images/post/post-1@text.jpg" data-breviews-id='3' />
    </swiper-item>
    <swiper-item>
      <image src="/images/post/post-2@text.jpg" data-breviews-id='4' />
    </swiper-item>
    <swiper-item>
      <image src="/images/post/post-3@text.jpg" data-breviews-id='5' />
    </swiper-item>
  </swiper>
  <block wx:for="{{breviewsList}}" wx:for-item="item" wx:for-index="idx">
    <view catchtap="onTapToDetail" data-breviews-id="{{item.breviewsId}}">
      <template is="breviewsItemTpl" data="{{...item}}" />
    </view>
  </block>
</view>